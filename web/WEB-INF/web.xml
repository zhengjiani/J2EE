<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>DataSourceInitServlet</servlet-name>
        <servlet-class>com.zjn.init.DataSourceInitServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>DataSourceInitServlet</servlet-name>
        <url-pattern>/servlet/DataSourceInitServlet</url-pattern>
    </servlet-mapping>
    <!--过滤器配置开始-->
    <filter>
        <description>权限过滤器</description>
        <filter-name>PrivilegeFilter</filter-name>
        <filter-class>com.waxx.filter.PrivilegeFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>PrivilegeFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
        <servlet>
            <servlet-name>ValiImg</servlet-name>
            <servlet-class>com.waxx.web.ValiImg</servlet-class>
        </servlet>
        <servlet-mapping>
            <servlet-name>ValiImg</servlet-name>
            <url-pattern>/servlet/ValiImg</url-pattern>
        </servlet-mapping>
         <!--配置一个servlet-->
         <servlet>
             <servlet-name>helloServlet</servlet-name>
             <servlet-class>com.zjn.servlet.HelloServlet</servlet-class>
         </servlet>
    <!--配置一个servlet映射路径-->
    <servlet-mapping>
            <servlet-name>helloServlet</servlet-name>
            <url-pattern>/hello</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>myServlet</servlet-name>
        <servlet-class>com.zjn.servlet.MyServlet</servlet-class>
    </servlet>
    <!--配置一个servlet映射路径-->
    <servlet-mapping>
        <servlet-name>myServlet</servlet-name>
        <url-pattern>/myServlet</url-pattern>
    </servlet-mapping>

</web-app>